<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<servlet>
		<servlet-name>query</servlet-name>
		<servlet-class>de.egore911.osmgress.service.QueryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>query</servlet-name>
		<url-pattern>/query</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>portal</servlet-name>
		<servlet-class>de.egore911.osmgress.service.PortalServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>portal</servlet-name>
		<url-pattern>/portal</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>link</servlet-name>
		<servlet-class>de.egore911.osmgress.service.LinkServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>link</servlet-name>
		<url-pattern>/link</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>de.egore911.osmgress.http.Startup</listener-class>
	</listener>

	<resource-ref>
		<res-ref-name>jdbc/osmgress_mapnik</res-ref-name>
		<res-ref-type>javax.sql.DataSource</res-ref-type>
		<res-auth>Container</res-auth>
	</resource-ref>

</web-app>